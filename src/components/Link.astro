---
import { Image } from 'astro:assets';

interface Props {
	logo: any;
    title: string;
    link: any;
    bigger?: boolean;
}

const { title, logo, link, bigger } = Astro.props;
---

<a href={link} class="animate__animated animate__bounce animate__delay-1s w-3/5 md:w-1/3 rounded-lg mx-auto my-2 md:my-3 p-2 md:p-3 bg-zinc-300 border border-zinc-200 flex flex-row items-center">
    <Image src={logo} alt="" class={bigger? "w-7 md:w-9 ml-4 invert":"w-5 md:w-6 ml-4"} />
    <p class=" text-xl block text-center w-full">{title}</p>
</a>
<style>
    a{
        font-family: Roboto, sans-serif;
    }
</style>